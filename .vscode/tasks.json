{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy",
      "type": "shell",
      "command": "bash tool/deploy.sh ${input:releaseType}",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Format and fix files",
      "type": "shell",
      "command": "bash tool/format_and_fix.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run build runner",
      "type": "shell",
      "command": "bash tool/generate_code.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Setup environment",
      "type": "shell",
      "command": "bash tool/setup.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "bash tool/test.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "releaseType",
      "type": "pickString",
      "description": "Select release type",
      "options": [
        "patch",
        "minor",
        "major"
      ],
      "default": "patch"
    }
  ]
}